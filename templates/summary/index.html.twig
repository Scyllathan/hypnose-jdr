{% extends 'base.html.twig' %}

{% block title %}Résumé de séance de {{ game.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-3">Résumé de séance de "{{ game.name }}"</h1>
    {{ form_start(summaryForm) }}
    {{ form_row(summaryForm.title, { label: 'Titre'}) }}
    {{ form_row(summaryForm.sessionDate, { label: 'Date de la séance'}) }}
    {{ form_row(summaryForm.content, { label: 'Résumé'}) }}
    <button type="submit" class="btn btn-info btn-lg">Poster le résumé</button>
    {{ form_end(summaryForm) }}
</div>
{% endblock %}
