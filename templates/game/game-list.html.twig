{% extends 'base.html.twig' %}

{% block title %}Mes parties{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-5">Mes parties</h1>
        <table class="table table-striped table-hover table-responsive-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th class="w-25">Nom</th>
                <th class="w-50">Personnages</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for game in games %}
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.name }}</td>
                    <td>
                        {% if game.characters is null %}
                            Aucun
                        {% else %}
                            {% for character in game.characters %}
                                {{ character.firstname }} {{ character.lastName }} -
                            {% endfor %}
                        {% endif %}
                    </td>
                    <td>
                        <a href="#" role="button" class="btn
                    btn-info">Détail</a>
                    </td>
                    <td>
                        <a href="#" role="button" class="btn
                    btn-warning">Modifier</a>
                    </td>
                    <td>
                        <a href="#" role="button" class="btn
                        btn-danger" onclick="return confirm('Êtes vous sûr de ' +
                     'vouloir supprimer cette partie ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
