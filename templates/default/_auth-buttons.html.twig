{% if app.user %}
    <div class="mb-3 d-flex justify-content-end">
        <p class="mt-2 ml-2 text-light">Utilisateur connecté : {{ app.user.username }}</p>
        <a href="{{ path('app_logout') }}"><button class="btn btn-info mx-3">Se déconnecter</button></a>
    </div>
{% else %}
    <div class="mb-3 d-flex justify-content-end">
        <a href="{{ path('app_register') }}"><button class="btn btn-info mx-3">S'inscrire</button></a>
        <a href="{{ path('app_login') }}"><button class="btn btn-info mx-3">Se connecter</button></a>
    </div>
{% endif %}