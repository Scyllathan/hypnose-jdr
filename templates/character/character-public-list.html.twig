{% extends 'base.html.twig' %}

{% block title %}Personnages publics{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-5">Personnages publics</h1>

        <div class="filterElement bg-light rounded p-3 mb-4 shadow-sm">
            <h2 class="h5 mb-3">Recherche de personnage</h2>
            <div class=" d-flex flex-column flex-md-row justify-content-between">
                <div class="d-flex flex-column flex-md-row">
                    <input class="form-control w-auto mr-md-2 mb-2" type="text" id="idFilter" onkeyup="characterById()"
                           placeholder="Identifiant du personnage">
                    <input class="form-control w-auto" type="text" id="nameFilter" onkeyup="characterByName()"
                           placeholder="Nom du personnage">
                </div>
                <div class="mt-md-0 mt-2">
                    <button class="btn btn-info" type="button" id="withoutGameFilter" onclick="withoutGameCharacters()">
                        Sans Partie
                    </button>
                    <button class="btn btn-info" type="button" id="AllFilter" onclick="allCharacters()">
                        Tous
                    </button>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover table-responsive-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th class="w-50">Nom</th>
                <th class="w-50">Partie</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody id="characterList">

            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/publicCharacterListGenerator.js') }}"></script>
    <script src="{{ asset('js/filters.js') }}"></script>
{% endblock %}