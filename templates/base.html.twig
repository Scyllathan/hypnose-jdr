<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('images/pendule-logo.png') }}" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/global.scss') }}" type="text/css">
        {% block stylesheets %}
        {% endblock %}
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid">
        <div class="row">
            {% include 'default/_navbar.html.twig' %}
            <div class="col-sm min-vh-100 bg-body py-3 px-0 px-md-3">
                <!-- content -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('alert') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {% include 'default/_auth-buttons.html.twig' %}
                <div class="container d-flex justify-content-center col-sm-12 px-0 px-sm-2">
                    <div class="bg-main rounded mt-2 mt-sm-4 w-100">
                        {% block body %}{% endblock %}
                    </div>

                </div>

            </div>
        </div>
    </div>
    </body>
</html>
